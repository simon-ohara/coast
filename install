#!/bin/bash

# check for docker?
NAME="coast"
SOURCE_URL="https://raw.github.com/simon-ohara/${NAME}/master/.gitconfig"
ROOT="/usr/local"
INSTALL_PATH="${ROOT}/${NAME}/bin"
BIN_PATH="${ROOT}/bin"

mkdir -p $INSTALL_PATH
wget $SOURCE_URL --directory-prefix $INSTALL_PATH
ln -sf "$INSTALL_PATH/${NAME}" "$BIN_PATH/${NAME}"
